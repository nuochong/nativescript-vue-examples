// 全局 SCSS 样式
// @see https://docs.nativescript.org/ui/styling

@import './assets/css/animate.css';

.fa {
  font-family: 'FontAwesome', 'fontawesome-webfont', 'font-awesome';
  font-size: 24;
}
.icon {
  font-family: 'iconfont';
  font-size: 24;
  color: white;
}
.bold {
  font-family: 'Assistant-Bold', 'Assistant';
  font-weight: 700;
}
.hello-world {
  padding: 0;
  label {
    margin: 10 20;
  }
}
.split {
  vertical-align: center;
  text-align: center;
  font-size: 15;
  color: white;
}
.label-black {
  color: black;
}
.label-white {
  color: white;
}
.text-field-white {
  color: white;
  placeholder-color: gray;
}
.text-view-white {
  background-color: black;
  color: black;
  placeholder-color: gray;
}
.span-white {
  color: white;
}
.span-black {
  color: black;
}

// ns-ui
